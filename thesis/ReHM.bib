	journal = {BMC Geriatrics},
	author = {Vermeulen, Joan and Neyens, Jacques CL and van Rossum, Erik and Spreeuwenberg, Marieke D and de Witte, Luc P},
	month = dec,
	year = {2011},
	pages = {33},
	file = {Vermeulen et al. - 2011 - Predicting ADL disability in community-dwelling el.pdf:/home/steven/Zotero/storage/ZUVGU254/Vermeulen et al. - 2011 - Predicting ADL disability in community-dwelling el.pdf:application/pdf},
}

