	keywords = {Aged, Humans, Prevalence, Risk Factors, Comorbidity, Age of Onset, Aging, Disease Progression, Alzheimer Disease, Cognitive Dysfunction, Depressive Disorder, Memory Disorders, Nootropic Agents},
