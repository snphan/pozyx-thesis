@article{inglis_structured_2010,
	series = {Comment in: {Evid} {Based} {Nurs}. 2011 {Jan};14(1):27-8 {PMID}: 21163801 [https://www.ncbi.nlm.nih.gov/pubmed/21163801] {Comment} in: {Cochrane} {Database} {Syst} {Rev}. 2011;2011:{ED000008} {PMID}: 21833931 [https://www.ncbi.nlm.nih.gov/pubmed/21833931] {Comment} in: {Cochrane} {Database} {Syst} {Rev}. 2012;8:{ED000009} {PMID}: 22895912 [https://www.ncbi.nlm.nih.gov/pubmed/22895912] {Update} in: {Cochrane} {Database} {Syst} {Rev}. 2015;10:{CD007228} {PMID}: 26517969 [https://www.ncbi.nlm.nih.gov/pubmed/26517969]},
