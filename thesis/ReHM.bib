	journal = {BMC Neurology},
	author = {Halabchi, Farzin and Alizadeh, Zahra and Sahraian, Mohammad Ali and Abolhasani, Maryam},
	month = sep,
	year = {2017},
	pmid = {28915856},
	pmcid = {PMC5602953},
	pages = {185},
	file = {Full Text:/home/steven/Zotero/storage/BS7KEKKK/Halabchi et al. - 2017 - Exercise prescription for patients with multiple s.pdf:application/pdf},
