	file = {Bruijn and van Die√´n - 2018 - Control of human gait stability through foot place.pdf:/home/steven/Zotero/storage/XSJ78QJA/Bruijn and van Die√´n - 2018 - Control of human gait stability through foot place.pdf:application/pdf},
